{% block title %}{% trans "Mujin" %}{% endblock %}

{% block body %}
%script{type: "text/x-handlebars"}<>
  .base<>
    .navbar.navbar-default.navbar-fixed-top{role: "navigation"}<>
      .container
        .navbar-header<>
          %button.navbar-toggle{type: "button", "data-toggle" => "collapse", "data-target" => ".navbar-collapse"}<>
            %span.sr-only<> {% trans "Toggle navigation" %}
            %span.icon-bar<>
            %span.icon-bar<>
            %span.icon-bar<>
          {% verbatim %}{{#link-to 'index' class="navbar-brand"}}{% endverbatim %}
          %span<> {% trans "Mujin" %}
          {% verbatim %}{{/link-to}}{% endverbatim %}
        .navbar-collapse.collapse<>
          %ul.nav.navbar-nav.navbar-right<>
            %li<>
              %a{href: "#"} Signed in as {{ request.user.username }}
    .content<> {% verbatim %}{{outlet}}{% endverbatim %}

%script#index{type: "text/x-handlebars"}<>
  {% include "page/index.html" %}
%script#about{type: "text/x-handlebars"}<>
  {% include "page/about.html" %}
%script#user{type: "text/x-handlebars"}<>
